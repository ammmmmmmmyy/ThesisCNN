<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThesisCNN.MyFiles"
             BackgroundColor="#F6F2F2"
             Shell.FlyoutBehavior="Disabled">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}" IconOverride="back_arrow.png"/>
    </Shell.BackButtonBehavior>
     
    <ContentPage.Content>
        <StackLayout>
            <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
                <Grid.RowDefinitions>
                    <!--BODY-->
                    <RowDefinition Height="636"/>
                    <!--BOTTOM BAR-->
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <!--BODY-->
                <Grid Grid.Row="0" Grid.Column="0">
                    <Label Grid.Row="0" Grid.Column="0" Text="MY FILES" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                            FontAttributes="Bold" TextColor="Black" FontSize="30" />
                </Grid>
                <!--BOTTOM BAR-->
                <Grid Grid.Row="1" Grid.Column="0">
                    <Label Grid.Row="0" Grid.Column="0" BackgroundColor="White"/>
                </Grid>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>